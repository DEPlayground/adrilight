<Window x:Class="adrilight.ui.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:adrilight.ui"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="300" Width="300"
        DataContext="{Binding Source={StaticResource Locator}, Path=SettingsViewModel}">
    <StackPanel>
        <TextBlock>Muhh!!!</TextBlock>
        <CheckBox IsChecked="{Binding Settings.Autostart}" />
        <TextBox Text="{Binding Settings.SpotsX,UpdateSourceTrigger=PropertyChanged}"></TextBox>
    </StackPanel>
</Window>
